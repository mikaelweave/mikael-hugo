{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Push Images",
            "type": "shell",
            "command": "bash",
            "args": ["${workspaceFolder}/tools/scripts/push-images.sh"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Preview Local",
            "type": "process",
            "command": "hugo",
            "args": [
                "serve",
                "-D"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Preview Local Production",
            "type": "process",
            "command": "hugo",
            "args": [
                "serve",
                "-D",
                "--environment",
                "production"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}